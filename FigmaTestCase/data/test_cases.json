[
    {
        "test_name": "Login Page Loads",
        "description": "Verify that the login page loads successfully.",
        "steps": [
            {
                "action": "navigate",
                "target": "login_page_url"
            },
            {
                "action": "assert_element_present",
                "target": "//frame[@title='Log In']"
            }
        ],
        "expected_result": "Login frame is displayed."
    },
    {
        "test_name": "Signup Page Loads",
        "description": "Verify that the signup page loads successfully.",
        "steps": [
            {
                "action": "navigate",
                "target": "signup_page_url"
            },
            {
                "action": "assert_element_present",
                "target": "//frame[@title='Sign Up']"
            }
        ],
        "expected_result": "Signup frame is displayed."
    },
    {
        "test_name": "Homepage Loads",
        "description": "Verify that the homepage loads successfully.",
        "steps": [
            {
                "action": "navigate",
                "target": "homepage_url"
            },
            {
                "action": "assert_element_present",
                "target": "//frame[@title='Home Page']"
            }
        ],
        "expected_result": "Homepage frame is displayed."
    },
    {
        "test_name": "Login Page Elements Present",
        "description": "Verify that key elements are present on the login page.",
        "steps": [
            {
                "action": "navigate",
                "target": "login_page_url"
            },
            {
                "action": "assert_element_present",
                "target": "//text[contains(.,'Email')]"
            },
            {
                "action": "assert_element_present",
                "target": "//text[contains(.,'Password')]"
            },
            {
                "action": "assert_element_present",
                "target": "//text[contains(.,'Login now')]"
            }
        ],
        "expected_result": "Email, Password, and Login now elements are displayed."
    }
